@model NerdStore.Sales.Application.Queries.Dtos.ShoppingCartDto
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-10 col-md-offset-1">

            <vc:summary />

            @{
                if (Model?.Items != null)
                {
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Produto</th>
                                <th>Quantidade</th>
                                <th class="text-center">Valor</th>
                                <th class="text-center">Valor Total</th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="col-sm-5 col-md-5">
                                            <div class="media">
                                                <div class="media-body">
                                                    <h4 class="media-heading"><a asp-controller="ShopWindow" asp-action="ProductDetails" asp-route-id="@item.ProductId">@item.ProductName</a></h4>
                                                </div>
                                            </div>
                                        </td>

                                        <td class="col-sm-2 col-md-2" style="text-align: center">
                                            <form method="post" asp-controller="ShoppingCart" asp-action="UpdateOrderItem">
                                                <input type="hidden" id="orderId" name="orderId" value="@Model.OrderId" />
                                                <input type="hidden" id="productId" name="productId" value="@item.ProductId" />
                                                <div class="row" style="float: left">
                                                    <input style="width: 70px" type="text" class="form-control" name="productQuantity" id="productQuantity" value="@item.ProductQuantity">
                                                </div>
                                                <div class="row" style="float: right">
                                                    <button type="submit" class="btn btn-success">
                                                        <span class="fas fa-sync"></span>
                                                    </button>
                                                </div>
                                            </form>
                                        </td>
                                        <td class="col-sm-1 col-md-1 text-center"><strong>@item.UnitPrice.ToString("C")</strong></td>
                                        <td class="col-sm-1 col-md-1 text-center"><strong>@item.TotalPrice.ToString("C")</strong></td>

                                        <td class="col-sm-1 col-md-1">
                                            <form method="post" asp-controller="ShoppingCart" asp-action="RemoveOrderItem">
                                                <input type="hidden" id="orderId" name="orderId" value="@Model.OrderId" />
                                                <input type="hidden" id="productId" name="productId" value="@item.ProductId" />
                                                <button type="submit" class="btn btn-danger">
                                                    <span class="fas fa-trash-alt"></span> Remover
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }

                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td><h5>Subtotal</h5></td>
                                <td class="text-right"><h5><strong>@Model.Subtotal.ToString("C")</strong></h5></td>
                            </tr>
                            <tr>
                                <td> </td>
                                <td colspan="2">
                                    <form method="post" asp-controller="ShoppingCart" asp-action="ApplyVoucher">
                                        <input type="hidden" id="orderId" name="orderId" value="@Model.OrderId" />
                                        <div class="row" style="float: left">
                                            <input placeholder="Voucher" style="width: 150px" type="text" class="form-control" name="VoucherCode" id="VoucherCode" value="@Model.VoucherCode">
                                        </div>
                                        <div class="row" style="float: right">
                                            <button type="submit" class="btn btn-success">
                                                <span class="fas fa-sync"></span>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                                <td><h5>Desconto</h5></td>
                                <td class="text-right"><h5><strong>@Model.Discount.ToString("C")</strong></h5></td>
                            </tr>
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td>
                                    <h3>Total</h3>
                                </td>
                                <td class="text-right">
                                    <h3><strong>@Model.TotalPrice.ToString("C")</strong></h3>
                                </td>
                            </tr>
                            <tr>
                                <td> </td>
                                <td> </td>
                                <td> </td>
                                <td>
                                    <a asp-controller="ShopWindow" asp-action="Index" class="btn btn-dark">
                                        <span class="fa fa-shopping-cart"></span>Continuar Compra
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="ShoppingCart" asp-action="PurchaseSummary" class="btn btn-success">
                                        <span class="fas fa-play"></span><br /> Finalizar Compra
                                    </a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                }
                else
                {
                    <div><p>Carrinho Vazio</p></div>
                }
            }
        </div>
    </div>
</div>